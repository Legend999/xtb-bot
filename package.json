{
  "name": "xtb-bot",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "engines": {
    "node": "^22"
  },
  "scripts": {
    "codegen": "graphql-codegen --config codegen.ts",
    "start:frontend": "npm --prefix frontend run dev",
    "start:backend": "npm --prefix backend run dev",
    "start": "concurrently --names \"backend,frontend,codegen\" --prefix-colors \"green,blue,magenta\" \"npm run start:backend\" \"npm run start:frontend\" \"npm run codegen -- --watch\""
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "graphql-ws": "^6.0.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@graphql-codegen/cli": "^5.0.5",
    "@graphql-codegen/near-operation-file-preset": "^3.0.0",
    "@graphql-codegen/typescript": "^4.1.5",
    "@graphql-codegen/typescript-operations": "^4.5.1",
    "@graphql-codegen/typescript-react-apollo": "^4.3.2",
    "@graphql-codegen/typescript-resolvers": "^4.4.4",
    "@parcel/watcher": "^2.5.1",
    "concurrently": "^9.1.2",
    "eslint": "^9.21.0",
    "eslint-plugin-no-relative-import-paths": "^1.6.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.25.0"
  }
}
